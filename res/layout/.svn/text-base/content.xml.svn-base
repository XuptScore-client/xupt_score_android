<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_frame"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FAEBD7"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/main_title_bar"
        android:orientation="horizontal" >

        <!-- 刷新progress -->

        <ProgressBar
            android:id="@+id/proRefresh"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:visibility="invisible" />
        <!-- 选择大学按钮 ,也是我的发表，我的收藏，我的评论的 -->

        <Button
            android:id="@+id/butCollege"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/transparent"
            android:gravity="center_vertical"
            android:text="西安邮电大学"
            android:textColor="@drawable/change_button_text_color"
            android:textSize="20dp" />
        <!-- 菜单 -->

        <Button
            android:id="@+id/butMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_menu"
            android:gravity="center_vertical"
            android:textColor="#FF8C00"
            android:textSize="14sp" />

        <!-- 刷新 -->

        <Button
            android:id="@+id/butRefresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/button_refresh"
            android:gravity="center_vertical" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <!-- 只有第一个高校风云榜有这个布局 -->

        <LinearLayout
            android:id="@+id/linearLayoutBang"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:orientation="horizontal" >

            <!-- 选择说说种类 -->

            <Button
                android:id="@+id/butMsgKind"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/button_choose"
                android:text="种类"
                android:textColor="#FF8C00"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="0.1dp"
                android:layout_height="wrap_content"
                android:background="@drawable/vertical" />
            <!-- 选择说说排序方式 -->

            <Button
                android:id="@+id/butMsgSort"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/button_choose"
                android:text="排行"
                android:textColor="#FF8C00"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="0.1dp"
                android:layout_height="wrap_content"
                android:background="@drawable/vertical" />

            <!-- 发表说说 -->

            <Button
                android:id="@+id/butPublishMsg"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/button_choose"
                android:text="发状态"
                android:textColor="#FF8C00"
                android:textSize="16dp" />
        </LinearLayout>

        <!-- 所有的信息列表 -->

        <com.xy.fy.view.CustomListView
            android:id="@+id/listView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:divider="@drawable/expand_divider"
            android:fastScrollEnabled="true" >
        </com.xy.fy.view.CustomListView>
    </LinearLayout>

</LinearLayout>