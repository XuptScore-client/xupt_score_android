<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/dimgray"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp" >

        <com.mc.util.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/headphoto"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/person"
            app:border_color="#BFEFFF"
            app:border_width="2dp" />

        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="游客"
            android:textColor="#D1EEEE"
            android:textSize="20dp" />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/expand_divider" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="11dp" >

        <!-- 高校风云榜 -->

        <LinearLayout
            android:id="@+id/menu_bang"
            android:layout_width="318dp"
            android:layout_height="wrap_content"
            android:background="@drawable/menu_list"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal"
            android:padding="5dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/menu_bang" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="成绩查询"
                android:textColor="@drawable/change_menu_text_color"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:src="@drawable/menu_arrow" />
        </LinearLayout>

        <!-- <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/expand_divider" /> -->
        <!-- 我发表的说说 -->

        <LinearLayout
            android:id="@+id/menu_my_bukao"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/menu_list"
            android:clickable="true"
            android:orientation="horizontal"
            android:padding="5dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/menu_my_publish" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="补考好友"
                android:textColor="@drawable/change_menu_text_color"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:src="@drawable/menu_arrow" />
        </LinearLayout>
<!-- 
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/expand_divider" /> -->
        <!-- 我评论过的说说 -->

        <LinearLayout
            android:id="@+id/menu_my_paiming"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/menu_list"
            android:clickable="true"
            android:orientation="horizontal"
            android:padding="5dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/menu_my_comment" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="我的排名"
                android:textColor="@drawable/change_menu_text_color"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:src="@drawable/menu_arrow" />
        </LinearLayout>

        <!-- <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/expand_divider" /> -->
        <!-- 我收藏过的说说 -->

        <LinearLayout
            android:id="@+id/menu_my_collect"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/menu_list"
            android:clickable="true"
            android:orientation="horizontal"
            android:padding="5dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/menu_my_collect" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="我收藏的"
                android:textColor="@drawable/change_menu_text_color"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:src="@drawable/menu_arrow" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/expand_divider" />
        <!-- 选项设置 -->

        <LinearLayout
            android:id="@+id/menu_setting"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/menu_list"
            android:clickable="true"
            android:orientation="horizontal"
            android:padding="5dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/menu_setting" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="选项"
                android:textColor="@drawable/change_menu_text_color"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:src="@drawable/menu_arrow" />
        </LinearLayout>

        <!-- <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/expand_divider" /> -->
        <!-- 选项设置 -->

        <LinearLayout
            android:id="@+id/menu_about"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/menu_list"
            android:clickable="true"
            android:orientation="horizontal"
            android:padding="5dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/menu_about" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="关于"
                android:textColor="@drawable/change_menu_text_color"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:src="@drawable/menu_arrow" />
        </LinearLayout>

       <!--  <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/expand_divider" /> -->

        <!-- 退出 -->

        <LinearLayout
            android:id="@+id/menu_quit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/menu_list"
            android:clickable="true"
            android:orientation="horizontal"
            android:padding="5dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/menu_quit" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="注销"
                android:textColor="@drawable/change_menu_text_color"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:src="@drawable/menu_arrow" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>